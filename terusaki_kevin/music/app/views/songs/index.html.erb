<div class="col-xs-12">
	<h1 class="droid_sans_font"><%= @artist.name %>'s Songs</h1>

	<table class="table droid_sans_font">
		<tbody>
			<tr>
				<th>Track</th>
				<th>Time</th>
				<th>Genre</th>
				<th>Actions</th>
			</tr>
			<% @songs.each do |song| %>
			<tr>
				<td> <%= link_to song.track, artist_song_path(@artist, song) %> </td>
				<td> <%= song.time %> </td>
				<td> <%= song.genre %> </td>
				<td>
					<%= link_to 'Show', artist_song_path(@artist, song), :class => "btn btn-primary" %>
					<%= link_to 'Edit', edit_artist_song_path(@artist, song), :class => "btn btn-default" %>
					<%= link_to 'Destroy', artist_song_path(@artist, song), method: 'delete', :class => "btn btn-danger" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<br/>
	<div class="col-xs-1 col-xs-offset-5">
		<%= link_to 'New Song', new_artist_song_path(@artist), :class => "btn btn-success droid_sans_font" %>
	</div>
</div>

