<div class="col-xs-12">
	<h1 class="droid_sans_font">Artists</h1>

	<table class="table droid_sans_font">
		<tbody>
			<tr>
				<th>Name</th>
				<th>Age</th>
			</tr>
			<% @artists.each do |artist| %>
			<tr>
				<td> <%= link_to artist.name, artist_path(artist) %> </td>
				<td> <%= artist.age %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<br/>
	<div class="droid_sans_font">
		<button type="button" class="btn btn-warning"> <%= link_to 'New Artist', new_artist_path, :class => 'white_font' %> </button>
		
	</div><br/>
</div>
